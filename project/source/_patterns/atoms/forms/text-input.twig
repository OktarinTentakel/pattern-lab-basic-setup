{#
	~ATOM TEXT INPUT~
#}

<input
	type="text"
	class="atom-text-input
		{%~ if negative %} negative{% endif ~%}
		{%~ if error %} error{% endif ~%}
		{{~ style_modifier() ~}}
	"
	{% if id %}id="{{ id }}"{% endif %}
	{% if name %}name="{{ name }}"{% endif %}
	{% if value %}value="{{ value }}"{% endif %}
	{% if disabled %}disabled{% endif %}
	{% if placeholder %}placeholder="{{ placeholder }}"{% endif %}
/>
